# MySQL 数据库配置
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=alumni_mgmt
MYSQL_USER=alumni_user
MYSQL_PASSWORD=alumni_password

# 应用数据库连接配置
DB_HOST=mysql
DB_PORT=3306
DB_USER=alumni_user
DB_PASSWORD=alumni_password
DB_NAME=alumni_mgmt

# LLM 配置（火山引擎/豆包）
LLM_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
LLM_API_KEY=your-api-key-here
LLM_MODEL=deepseek-v3-1-250821

# Flask 配置
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_ENV=production
PYTHONUNBUFFERED=1

# Docker Registry 配置（用于 CI/CD）
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# 服务器配置（用于部署）
SERVER_HOST=your-server-ip
SERVER_USER=your-ssh-username
SERVER_PASSWORD=your-ssh-password
SSH_PORT=22